{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@middleware/*": [
        "./middleware/*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@typings/*": [
        "./typings/*"
      ],
      "@root/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
