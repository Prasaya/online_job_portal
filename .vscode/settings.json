{
  "files.exclude": {
    "node_modules": true
  },
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/*/**": true,
    "**dist/**": true,
    "**/public/**": true,
    "**/build/**": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true
}
