{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "./src/*"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@typings/*": [
        "./src/typings/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "src/client/**"
  ],
}
