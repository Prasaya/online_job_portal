{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
    ],
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "packages/api"
  ],
  "exclude": [
    "**/node_modules/**",
    "packages/client/",
    "**python/**"
  ]
}
