{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "packages/api/typings"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@middleware/*": [
        "packages/api/middleware/*"
      ],
      "@models/*": [
        "packages/api/models/*"
      ],
      "@routes/*": [
        "packages/api/routes/*"
      ],
      "@utils/*": [
        "packages/api/utils/*"
      ],
      "@typings/*": [
        "packages/api/typings/*"
      ],
      "@root/*": [
        "packages/api/*"
      ]
    }
  },
  "include": [
    "packages/api/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "packages/client/",
    "**python/**"
  ]
}
